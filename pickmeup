    <script>
        let classes = {}; // ë°˜ë³„ ë°ì´í„° ì €ì¥
        let currentClass = null; // í˜„ì¬ ì„ íƒëœ ë°˜

        // í˜„ì¬ ë°˜ì˜ ë°ì´í„° ê°€ì ¸ì˜¤ê¸°
        function getCurrentClassData() {
            if (!currentClass || !classes[currentClass]) {
                return {
                    students: [],
                    presentedStudents: new Set(),
                    history: []
                };
            }
            return classes[currentClass];
        }

        // ë¡œì»¬ ìŠ¤í† ë¦¬ì§€ì—ì„œ ë°ì´í„° ë¶ˆëŸ¬ì˜¤ê¸°
        function loadData() {
            const saved = localStorage.getItem('studentPickerData');
            if (saved) {
                const data = JSON.parse(saved);
                classes = data.classes || {};
                currentClass = data.currentClass || null;

                // Set ê°ì²´ ë³µì›
                Object.keys(classes).forEach(className => {
                    classes[className].presentedStudents = new Set(classes[className].presentedStudents || []);
                });

                // ê¸°ë³¸ ë°˜ì´ ì—†ìœ¼ë©´ ìƒì„±
                if (Object.keys(classes).length === 0) {
                    classes['1ë°˜'] = {
                        students: [],
                        presentedStudents: new Set(),
                        history: []
                    };
                    currentClass = '1ë°˜';
                }

                updateClassTabs();
                updateDisplay();
                updateHistory();
            } else {
                // ìµœì´ˆ ì‹¤í–‰ì‹œ ê¸°ë³¸ ë°˜ ìƒì„±
                classes['1ë°˜'] = {
                    students: [],
                    presentedStudents: new Set(),
                    history: []
                };
                currentClass = '1ë°˜';
                updateClassTabs();
                updateDisplay();
            }
        }

        // ë¡œì»¬ ìŠ¤í† ë¦¬ì§€ì— ë°ì´í„° ì €ì¥
        function saveData() {
            const data = {
                classes: {},
                currentClass: currentClass
            };

            // Set ê°ì²´ë¥¼ ë°°ì—´ë¡œ ë³€í™˜í•˜ì—¬ ì €ì¥
            Object.keys(classes).forEach(className => {
                data.classes[className] = {
                    students: classes[className].students,
                    presentedStudents: Array.from(classes[className].presentedStudents),
                    history: classes[className].history
                };
            });

            localStorage.setItem('studentPickerData', JSON.stringify(data));
        }

        // ë°˜ íƒ­ ì—…ë°ì´íŠ¸
        function updateClassTabs() {
            const tabsDiv = document.getElementById('classTabs');
            tabsDiv.innerHTML = '';

            Object.keys(classes).forEach(className => {
                const tab = document.createElement('div');
                tab.className = 'class-tab';
                if (className === currentClass) {
                    tab.classList.add('active');
                }
                tab.textContent = className;
                
                // í´ë¦­ìœ¼ë¡œ ë°˜ ì „í™˜
                tab.onclick = () => switchClass(className);
                
                // ìš°í´ë¦­ìœ¼ë¡œ ì‚­ì œ ë©”ë‰´
                tab.oncontextmenu = (e) => {
                    e.preventDefault();
                    if (confirm(`${className}ì„(ë¥¼) ì‚­ì œí•˜ì‹œê² ìŠµë‹ˆê¹Œ?\ní•´ë‹¹ ë°˜ì˜ ëª¨ë“  ë°ì´í„°ê°€ ì‚­ì œë©ë‹ˆë‹¤.`)) {
                        deleteClass(className);
                    }
                };

                tabsDiv.appendChild(tab);
            });

            // í˜„ì¬ ë°˜ ì´ë¦„ í‘œì‹œ
            document.getElementById('currentClassName').textContent = `ğŸ“š ${currentClass}`;
        }

        // ë°˜ ì¶”ê°€
        function addClass() {
            const input = document.getElementById('classNameInput');
            const className = input.value.trim();

            if (className === '') {
                alert('ë°˜ ì´ë¦„ì„ ì…ë ¥í•´ì£¼ì„¸ìš”.');
                return;
            }

            if (classes[className]) {
                alert('ì´ë¯¸ ì¡´ì¬í•˜ëŠ” ë°˜ ì´ë¦„ì…ë‹ˆë‹¤.');
                return;
            }

            classes[className] = {
                students: [],
                presentedStudents: new Set(),
                history: []
            };

            currentClass = className;
            input.value = '';

            updateClassTabs();
            updateDisplay();
            updateHistory();
            saveData();
        }

        // ë°˜ ì „í™˜
        function switchClass(className) {
            currentClass = className;
            document.getElementById('resultDisplay').textContent = '?'; // ë°œí‘œì ê²°ê³¼ ì´ˆê¸°í™”
            updateClassTabs();
            updateDisplay();
            updateHistory();
        }

        // ë°˜ ì‚­ì œ
        function deleteClass(className) {
            if (Object.keys(classes).length === 1) {
                alert('ìµœì†Œ 1ê°œì˜ ë°˜ì€ ìˆì–´ì•¼ í•©ë‹ˆë‹¤.');
                return;
            }

            delete classes[className];

            if (currentClass === className) {
                currentClass = Object.keys(classes)[0];
            }

            updateClassTabs();
            updateDisplay();
            updateHistory();
            saveData();
        }

        function handleKeyPress(event) {
            if (event.key === 'Enter') {
                addStudent();
            }
        }

        function addStudent() {
            const input = document.getElementById('studentInput');
            const inputValue = input.value.trim();
            
            if (inputValue === '') {
                alert('í•™ìƒ ì´ë¦„ì„ ì…ë ¥í•´ì£¼ì„¸ìš”.');
                return;
            }
            
            const classData = getCurrentClassData();
            
            // ì‰¼í‘œë¡œ êµ¬ë¶„í•˜ì—¬ ì—¬ëŸ¬ ì´ë¦„ ì²˜ë¦¬
            const names = inputValue.split(',').map(name => name.trim()).filter(name => name !== '');
            
            let addedCount = 0;
            let duplicateCount = 0;
            
            names.forEach(name => {
                if (classData.students.includes(name)) {
                    duplicateCount++;
                } else {
                    classData.students.push(name);
                    addedCount++;
                }
            });
            
            input.value = '';
            updateDisplay();
            saveData();
            
            // ê²°ê³¼ ë©”ì‹œì§€
            if (addedCount > 0 && duplicateCount > 0) {
                alert(`${addedCount}ëª…ì´ ì¶”ê°€ë˜ì—ˆìŠµë‹ˆë‹¤. (ì¤‘ë³µ ${duplicateCount}ëª… ì œì™¸)`);
            } else if (addedCount > 0) {
                alert(`${addedCount}ëª…ì´ ì¶”ê°€ë˜ì—ˆìŠµë‹ˆë‹¤.`);
            } else if (duplicateCount > 0) {
                alert('ëª¨ë‘ ì´ë¯¸ ë“±ë¡ëœ í•™ìƒì…ë‹ˆë‹¤.');
            }
        }

        function removeStudent(name) {
            const classData = getCurrentClassData();
            classData.students = classData.students.filter(s => s !== name);
            classData.presentedStudents.delete(name);
            updateDisplay();
            saveData();
        }

        function clearAll() {
            if (confirm('ëª¨ë“  í•™ìƒì„ ì‚­ì œí•˜ì‹œê² ìŠµë‹ˆê¹Œ?')) {
                const classData = getCurrentClassData();
                classData.students = [];
                classData.presentedStudents.clear();
                updateDisplay();
                saveData();
            }
        }

        function updateDisplay() {
            const classData = getCurrentClassData();
            const waitingList = document.getElementById('waitingList');
            const presentedList = document.getElementById('presentedList');
            
            waitingList.innerHTML = '';
            presentedList.innerHTML = '';
            
            classData.students.forEach(name => {
                const tag = document.createElement('div');
                tag.className = 'student-tag';
                
                if (classData.presentedStudents.has(name)) {
                    tag.classList.add('presented');
                    tag.innerHTML = `
                        <span>${name}</span>
                        <button class="remove-btn" onclick="removeStudent('${name}')">Ã—</button>
                    `;
                    presentedList.appendChild(tag);
                } else {
                    tag.innerHTML = `
                        <span>${name}</span>
                        <button class="remove-btn" onclick="removeStudent('${name}')">Ã—</button>
                    `;
                    waitingList.appendChild(tag);
                }
            });

            // ë¹ˆ ìƒíƒœ ë©”ì‹œì§€
            if (waitingList.children.length === 0) {
                waitingList.innerHTML = '<span style="color: #9ca3af;">ëŒ€ê¸° ì¤‘ì¸ í•™ìƒì´ ì—†ìŠµë‹ˆë‹¤.</span>';
            }
            if (presentedList.children.length === 0) {
                presentedList.innerHTML = '<span style="color: #9ca3af;">ì¶”ì²¨ëœ í•™ìƒì´ ì—†ìŠµë‹ˆë‹¤.</span>';
            }

            // í†µê³„ ì—…ë°ì´íŠ¸
            document.getElementById('totalStudents').textContent = classData.students.length;
            document.getElementById('presentedCount').textContent = classData.presentedStudents.size;
            
            const preventDuplicate = document.getElementById('preventDuplicate').checked;
            const remaining = preventDuplicate ? 
                classData.students.length - classData.presentedStudents.size : 
                classData.students.length;
            document.getElementById('remainingCount').textContent = remaining;

            // ë½‘ê¸° ë²„íŠ¼ í™œì„±í™”/ë¹„í™œì„±í™”
            const pickButton = document.getElementById('pickButton');
            pickButton.disabled = remaining === 0;
        }

        function pickStudent() {
            const classData = getCurrentClassData();

            if (classData.students.length === 0) {
                alert('í•™ìƒì„ ë¨¼ì € ì¶”ê°€í•´ì£¼ì„¸ìš”.');
                return;
            }

            const preventDuplicate = document.getElementById('preventDuplicate').checked;
            let availableStudents = classData.students;

            if (preventDuplicate) {
                availableStudents = classData.students.filter(s => !classData.presentedStudents.has(s));
                
                if (availableStudents.length === 0) {
                    if (confirm('ëª¨ë“  í•™ìƒì´ ë°œí‘œí–ˆìŠµë‹ˆë‹¤. ë°œí‘œ ì´ë ¥ì„ ì´ˆê¸°í™”í•˜ê³  ë‹¤ì‹œ ì‹œì‘í•˜ì‹œê² ìŠµë‹ˆê¹Œ?')) {
                        classData.presentedStudents.clear();
                        availableStudents = classData.students;
                        updateDisplay();
                    } else {
                        return;
                    }
                }
            }

            // ëœë¤ ì„ íƒ
            const selected = availableStudents[Math.floor(Math.random() * availableStudents.length)];
            const resultDisplay = document.getElementById('resultDisplay');
            resultDisplay.textContent = selected;
            
            if (preventDuplicate) {
                classData.presentedStudents.add(selected);
            }
            
            // ì´ë ¥ ì¶”ê°€
            const now = new Date();
            classData.history.unshift({
                name: selected,
                time: now.toLocaleString('ko-KR')
            });
            
            updateDisplay();
            updateHistory();
            saveData();
        }

        function updateHistory() {
            const classData = getCurrentClassData();
            const historyList = document.getElementById('historyList');
            historyList.innerHTML = '';
            
            if (classData.history.length === 0) {
                historyList.innerHTML = '<li class="history-item">ë°œí‘œ ì´ë ¥ì´ ì—†ìŠµë‹ˆë‹¤.</li>';
                return;
            }
            
            classData.history.forEach((item, index) => {
                const li = document.createElement('li');
                li.className = 'history-item';
                li.innerHTML = `
                    <span><strong>${index + 1}.</strong> ${item.name}</span>
                    <span style="color: #666; font-size: 0.9em;">${item.time}</span>
                `;
                historyList.appendChild(li);
            });
        }

        function clearHistory() {
            const classData = getCurrentClassData();
            
            if (confirm('ë°œí‘œ ì´ë ¥ì„ ëª¨ë‘ ì‚­ì œí•˜ì‹œê² ìŠµë‹ˆê¹Œ?')) {
                classData.history = [];
                classData.presentedStudents.clear();
                updateHistory();
                updateDisplay();
                saveData();
                document.getElementById('resultDisplay').textContent = '?';
            }
        }

        // í˜ì´ì§€ ë¡œë“œ ì‹œ ë°ì´í„° ë¶ˆëŸ¬ì˜¤ê¸°
        window.onload = function() {
            loadData();
        };
    </script>
